{
  // VSCode 창 열기 설정
  "window.openFoldersInNewWindow": "off",
  // 시작 화면 비활성화
  "workbench.startupEditor": "none",
  // 자동 저장
  "files.autoSave": "onWindowChange",
  // 저장 시 자동 포맷
  "editor.formatOnSave": true,
  // CMD 프로필 등록
  "terminal.integrated.profiles.windows": {
    "Plolux CMD": {
      "path": "C:\\Windows\\System32\\cmd.exe",
      "args": [
        "/k",
        "chcp 65001 >nul"
      ]
    },
    "Plolux Git Bash": {
      "path": "C:\\Plolux\\PortableGit\\bin\\bash.exe",
      "args": [
        "--login",
        "-i"
      ],
      // PortableGit 기반 Bash를 기본 셸로 쓰기 위한 프로필
      "icon": "terminal-bash"
    }
  },
  // 기본 터미널 프로필 지정
  "terminal.integrated.defaultProfile.windows": "Plolux Git Bash",
  // VSCode Git 확장을 PortableGit으로 지정 (기본 Git 연결을 포터블로 사용)
  "git.path": "C:\\Plolux\\PortableGit\\bin\\git.exe",
  // 선택사항: PowerShell 자동 실행 방지 (CMD만 남기기)
  "terminal.integrated.defaultProfile.osx": null,
  "terminal.integrated.defaultProfile.linux": null
}